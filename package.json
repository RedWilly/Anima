{
  "name": "@redwilly/anima",
  "version": "0.1.2",
  "description": "Animation library for mathematical visualizations",
  "repository": {
    "type": "git",
    "url": "https://github.com/RedWilly/Anima.git"
  },
  "homepage": "https://github.com/RedWilly/Anima#readme",
  "bugs": {
    "url": "https://github.com/RedWilly/Anima/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "anima": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "tsup",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "animation",
    "math",
    "visualization",
    "canvas",
    "manim"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fontkit": "^2.0.8",
    "fast-check": "^4.5.3",
    "glob": "^13.0.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.88",
    "commander": "^14.0.2",
    "fontkit": "^2.0.4"
  }
}
